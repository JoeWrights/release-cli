{
    "name": "@joewrights/release-cli",
    "private": true,
    "version": "1.0.3",
    "description": "A CLI tool for releasing projects",
    "author": "1035208578@qq.com",
    "license": "MIT",
    "main": "./lib/index.js",
    "bin": {
        "release-cli": "./lib/bin/index.js"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "./node_modules/.bin/rimraf lib && pnpm tsc",
        "tsc": "./node_modules/.bin/tsc",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "commander": "7.2.0",
        "conventional-changelog": "^4.0.0",
        "conventional-changelog-angular": "6.0.0",
        "execa": "5.1.1",
        "inquirer": "8.2.4",
        "kolorist": "^1.8.0",
        "semver": "7.5.3",
        "superstruct": "^2.0.2"
    },
    "devDependencies": {
        "@joewrights/presets": "1.0.1-alpha.0",
        "@types/conventional-changelog": "3.1.1",
        "@types/inquirer": "9.0.3",
        "@types/node": "20.12.12",
        "@types/semver": "7.5.0",
        "@vitest/ui": "^3.2.4",
        "rimraf": "^6.1.2",
        "typescript": "5.1.6",
        "vitest": "^3.2.4"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:JoeWrights/release-cli.git",
        "branch": "master"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "packageManager": "pnpm@8.5.0",
    "vitest": {
        "test": {
            "environment": "node",
            "globals": true,
            "include": [
                "test/**/*.{test,spec}.{js,ts}"
            ],
            "exclude": [
                "node_modules",
                "lib"
            ],
            "testTimeout": 10000,
            "hookTimeout": 10000
        }
    }
}
